#include <iostream>
#include <locale.h>
#include <cstdlib>

using namespace std;

int main()
{
    //Declaração de variáveis
        float fPeso = 0;


    //Configuração da tela de saída
    setlocale(LC_ALL,"");
    system("color F1");

    //Código do programa

    cout << "Digite o peso em kilos (kg) : ";
    cin >> fPeso;
    cout << endl;
    cout << "Esse peso em gramas vale: " << fPeso * 1000;

    return 0;

}
