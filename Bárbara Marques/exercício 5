#include <iostream>
#include <locale.h>
#include <cstdlib>

using namespace std;

int main()
{
    //Declaração de variáveis
        int iValor = 0;


    //Configuração da tela de saída
    setlocale(LC_ALL,"");
    system("color F1");

    //Código do programa

    cout << "Digite o valor do produto: ";
    cin >> iValor;

    cout << "O novo valor, com 10% de desconto é: " << iValor - iValor * 10 / 100;

    return 0;
}
