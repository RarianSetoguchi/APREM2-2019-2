#include <iostream>
#include <locale.h>
#include <cstdlib>

using namespace std;

int main()
{
    //Declaração de variáveis
        int ilado = 0;

    //Configuração da tela de saída
    setlocale(LC_ALL,"");
    system("color F1");

    //Código do programa

    cout << " Digite o valor do lado do quadrado: ";
    cin >> ilado;
    cout << endl;
    cout << "O valor da área desse quadrado é: "<< ilado*ilado;
    return 0;

}
