#include <iostream>
#include <locale.h>
#include <cstdlib>

using namespace std;

int main()
{
    //Declaração de variáveis
        int iNotaUm = 0;
        int iNotaDois = 0;
        int iMediaP = 0;


    //Configuração da tela de saída
    setlocale(LC_ALL,"");
    system("color F1");

    //Código do programa
    cout << "Digite sua primeira nota: ";
    cin >> iNotaUm;

    cout << "Digite sua segunda nota: ";
    cin >> iNotaDois;

    cout << "A média ponderada entre " << iNotaUm << " e " << iNotaDois << " vale: " << (iNotaUm * 2 + iNotaDois * 3)/5;



    return 0;
}
