#include <iostream>
#include <locale.h>
#include <cstdlib>

using namespace std;

int main()
{
    //Declaração de variáveis
       float fSalario = 0;
       float fSalAtual = 0;

    //Configuração da tela de saída
    setlocale(LC_ALL,"");
    system("color F1");

    //Código do programa

    cout << " Digite o valor do salário do funcionário: ";
    cin >> fSalario;
    cout << endl;
    cout << "Qual o valor do salário mínimo atual? ";
    cin >> fSalAtual;
    cout << endl;
    cout << "Com o salário desse funcionário é possível pagar " << fSalario / fSalAtual << " salários mínimos atuais";

    return 0;

}
