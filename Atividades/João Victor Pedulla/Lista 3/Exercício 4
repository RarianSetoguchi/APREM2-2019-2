#include <iostream>
#include <locale.h>
#include <cstdlib>
#include <cmath>  // comandos pow, sqrt, cbrt, etc
#include <ctype.h> // comando toupper ou tolower


using namespace std;

int main()
{
    //Declaração de variáveis

    int i = -1;
    int iNumero = 0;
    int iResultado = 0;

    //Configuração da tela de saída
    setlocale(LC_ALL,"");
    system("color F1");

    //Código do programa

    cout << "Tabuada do número: ";
    cin >> iNumero;



    while (i < 10)
    {
        iResultado = iNumero * (i + 1);

        cout << iNumero << " X " << i + 1 << " = " << iResultado << endl;

        i = i + 1;

    }


    return 0;
}
