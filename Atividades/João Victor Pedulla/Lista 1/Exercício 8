#include <iostream>
#include <locale.h>
#include <cstdlib>

using namespace std;

int main()
{
    //Declaração de variáveis

    float fpesokg = 0;
    float fpesog = 0;

    //Configuração da tela de saída
    setlocale(LC_ALL,"");
    system("color F1");

    //Código do programa

    cout << "Peso em Kg: ";
    cin >> fpesokg;

    fpesog = fpesokg * 1000;

    cout << "Peso em gramas = " << fpesog;


    return 0;
}
