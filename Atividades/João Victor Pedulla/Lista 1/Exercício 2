#include <iostream>
#include <locale.h>
#include <cstdlib>

using namespace std;

int main()
{
    //Declaração de variáveis

    float fvalor = 0;
    float fquantidade = 0;
    float fdias = 0;
    float fresultado = 0;

    //Configuração da tela de saída
    setlocale(LC_ALL,"");
    system("color F1");

    //Código do programa

    cout << "Valor do produto: ";
    cin >> fvalor;

    cout << "Quantidade mensal comprada do produto: ";
    cin >> fquantidade;

    cout << "Quantidade de meses: ";
    cin >> fdias;

    fresultado = fvalor * fquantidade * fdias;

    cout << "Gastos mensal com o produto: " << fresultado;

    return 0;
}
