#include <iostream>
#include <locale.h>
#include <cstdlib>

using namespace std;

int main()
{
    //Declaração de variáveis

    float fpreco = 0;
    float fresultado = 0;

    //Configuração da tela de saída
    setlocale(LC_ALL,"");
    system("color F1");

    //Código do programa

    cout << "Preço do produto: ";
    cin >> fpreco;

    fresultado = fpreco * 0.9;

    cout << "Preço com 10% de desconto: " << fresultado;

    return 0;
}
