#include <iostream>
#include <locale.h>
#include <cstdlib>

using namespace std;

int main()
{
    //Declaração de variáveis

    float fsalario = 0;
    float faumento = 0;

    //Configuração da tela de saída
    setlocale(LC_ALL,"");
    system("color F1");

    //Código do programa

    cout << "Valor do salário: ";
    cin >> fsalario;

faumento = fsalario * 1.3;

    if (fsalario < 500.00)
    {
        cout << "O salário com o reajuste será de: " << faumento;
    }

    else
    {
        cout << "Não tem direito ao aumento.";
    }

    return 0;
}
