#include <iostream>
#include <locale.h>
#include <cstdlib>

using namespace std;

int main()
{
    //Declaração de variáveis

    int fIdade = 0;

    //Configuração da tela de saída
    setlocale(LC_ALL,"");
    system("color F1");

    //Código do programa

    cout << "Digite sua idade: ";
    cin >> fIdade;

    if (fIdade < 18)
    {
        cout << "Você NÃO é maior de idade.";
    }

    else
    {
        cout << "Você é maior de idade.";
    }


    return 0;
}
