#include <iostream>
#include <locale.h>
#include <cstdlib>

using namespace std;

int main()
{
    //Declaração de variáveis

    float fprim = 0;
    float fseg = 0;

    //Configuração da tela de saída
    setlocale(LC_ALL,"");
    system("color F1");

    //Código do programa

    cout << "Primeiro número: ";
    cin >> fprim;

    cout << "Segundo número: ";
    cin >> fseg;

    if (fprim < fseg)
{
    cout << "O menor número é " << fprim;
}

    else if (fprim > fseg)
{
    cout << "O menor número é " << fseg;
}

    else if  (fprim = fseg)
{
    cout << "Os números são iguais";
}
    return 0;
}
