#include <iostream>
#include <locale.h>
#include <cstdlib>

using namespace std;

int main()
{
    //Declaração de variáveis
    float fV1 = 0;
    float fV2 = 0;
    int i = 0;


    //Configuração da tela de saída
    setlocale(LC_ALL,"");
    system("color F1");

    //Código do programa
    cout << "Tabuada de 1 a 10! " << endl;
    while (i < 11)
    {
        while   (fV1 < 11)
        {

            fV2 = fV1 * i;
            cout << fV1 << " x " << i << " = " << fV2 << "\n";
            fV1++;

        }
        fV1 = 0;
        i++;
        cout << endl;
    }



    return 0;
}
