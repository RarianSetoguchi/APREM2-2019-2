#include <iostream>
#include <locale.h>
#include <cstdlib>

using namespace std;

int main()
{
    //Declaração de variáveis
int iNumero1 = 0;
int iNumero2 = 0;


    //Configuração da tela de saída
    setlocale(LC_ALL,"");
    system("color F1");

    //Código do programa

cout << "Digite Numero 1 :";
cin >> iNumero1;

cout  <<  "Digite Numero 2 :";
cin   >>  iNumero2;

cout  << "Resultado da Divisao: " <<  iNumero1 / iNumero2 ;


    return 0;
}
