#include <iostream>
#include <locale.h>
#include <cstdlib>

using namespace std;

int main()
{
    //Declaração de variáveis

 int iPeso = 0;
 int iGramas = 1000;

 //Configuração da tela de saída
    setlocale(LC_ALL,"");
    system("color F1");

    //Código do programa

cout << "Digite seu peso em Kg: ";
cin  >> iPeso;

cout << "Seu Peso Em Gramas: " << iPeso * iGramas;

    return 0;
}
