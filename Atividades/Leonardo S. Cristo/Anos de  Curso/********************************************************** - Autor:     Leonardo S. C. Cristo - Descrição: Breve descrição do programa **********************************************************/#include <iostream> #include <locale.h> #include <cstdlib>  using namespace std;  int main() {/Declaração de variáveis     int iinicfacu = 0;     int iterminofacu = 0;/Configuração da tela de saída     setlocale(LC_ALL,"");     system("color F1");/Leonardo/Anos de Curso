#include <iostream>
#include <locale.h>
#include <cstdlib>

using namespace std;

int main()
{
    //Declaração de variáveis
    int iinicfacu = 0;
    int iterminofacu = 0;




    //Configuração da tela de saída
    setlocale(LC_ALL,"");
    system("color F1");

    //Código do programa


    cout << " inicio da faculdade: " ;
    cin  >> iinicfacu ;

    cout << " termino da faculdade: ";
    cin  >> iterminofacu ;

    cout << "curso :    " << iterminofacu - iinicfacu << "   anos cursados   " ;


    return 0;
}
