#include <iostream>
#include <locale.h>
#include <cstdlib>

using namespace std;

int main()
{


    //Declaração de variáveis
    float fNum1 = 0;
    float fNum2 = 0;
    float fNum3 = 0;




    //Configuração da tela de saída
    setlocale(LC_ALL,"");
    system("color F1");

    //Código do programa
    cout << "Insira o valor do salário: ";
    cin >> fNum1;


    cout << "Insira o valor das vendas ";
    cin >> fNum2;

    fNum3 = fNum2 * 0.04;





    cout << "O Seu salario vai ser de R$" << fNum3 + fNum1;


    return 0;
}
