**********************************************************/
#include <iostream>
#include <locale.h>
#include <cstdlib>
#include <iomanip>

using namespace std;

int main()
{
    //Declaração de variáveis
    float fSala = 0;
    float freajs = 0;

    //Configuração da tela de saída
    setlocale(LC_ALL,"");
    system("color F1");

    //Código do programa
    cout << "Digite o seu salário ";
    cin >> fSala ;



    if (fSala <= 500.00)

    {
        freajs = fSala * 0.3;

        cout << "\nSeu novo salário será de " <<freajs + fSala << "\n";

    }
    else if (fSala > 500.00)
    {
        cout << "\nVocê não tem direito a reajuste\n ";
    }

    cout << fixed << setprecision(2);





    return 0;
}
