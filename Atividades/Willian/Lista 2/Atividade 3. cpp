- Descrição: Mostra o Maior número Digitado
**********************************************************/
#include <iostream>
#include <locale.h>
#include <cstdlib>
#include <iomanip>

using namespace std;

int main()
{
    //Declaração de variáveis
    float fNum1 = 0;
    float fNum2 = 0;
    float fNum3 = 0;

    //Configuração da tela de saída
    setlocale(LC_ALL,"");
    system("color F1");

    //Código do programa
    cout << "Digite o primeiro número ";
    cin >> fNum1 ;

    cout << "Digite o segundo número ";
    cin >> fNum2 ;

    cout << "Digite o segundo número ";
    cin >> fNum3 ;



    if (fNum1 >= fNum2 && fNum1 >= fNum3)
    {
        cout << "\nO Maior número digitado foi " << fNum1;

    }
    else if (fNum2 >= fNum1 && fNum2 >= fNum3)
    {
        cout << "\nO Maior número digitado foi " << fNum2;
    }
    else if (fNum3 >= fNum1 && fNum3 >= fNum2)
    {
        cout << "\nO Maior número digitado foi " << fNum3;
    }










    //cout << fixed << setprecision(2);





    return 0;
}
