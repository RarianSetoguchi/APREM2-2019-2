#include <iostream>

#include <conio.h>

#include <locale.h>

#include <cstdlib>

using namespace std;



int main()

{

    float fixo, vendas, comissao, salario;

    //Limpa a tela

    system("cls");

    // Ativa acentuação

    setlocale(LC_ALL,"");

    // Mostra mensagem antes da leitura do salário

    cout << "\nDigite o salário do funcionário: $";

    // Salário fixo

    cin >> fixo;

    //Valor das vendas

    cout << "\n Informe o valor total das vendas: $ ";

    // Informa o valor total das vendas

    cin >> vendas;

    // Calcula a comissão

    comissao = vendas * 4/100;

    // Calcula o novo salário

    salario = fixo + comissao;

    // Mostra o novo salário

    cout << "\n Salario = $ " << fixo;
    cout << "\n Comissão = $ " << comissao;
    cout << "\n Total a receber = $ " << salario;

    // Para o programa a espera de um ENTER

    getch();

}
