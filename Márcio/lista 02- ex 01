#include <iostream>
#include <locale.h>
#include <cstdlib>

using namespace std;

int main()
{
    //Declaração de variáveis

float i1, i2, i3, i4, imed;

    //Configuração da tela de saída

 setlocale(LC_ALL,"");
    system("color F1");
    //Código do programa

cout << "Digite nota 1: ";
cin >> i1;

cout << "digite nota 2: ";
cin >> i2;

cout << "Digite nota 3: ";
cin >> i3;

cout << "Digite nota 4: ";
cin >> i4;

imed = (i1 + i2 + i3 + i4) / 4 ;

if (imed >=7)
{
    cout << "Sua media e: " << imed ;
    cout << " .você esta aprovado";
}
else if (imed <=7)
{
     cout << "Sua media e: " << imed ;
     cout << " você esta reprovado";
}


    return 0;
}
