#include <iostream>
#include <locale.h>
#include <cstdlib>

using namespace std;

int main()
{
    //Declaração de variáveis

float fnota1=0;
float fnota2=0;
float fmedia=0;
    //Configuração da tela de saída
    setlocale(LC_ALL,"");
    system("color b0");

    //Código do programa
cout << " digite a nota 1 ";
cin >> fnota1;
cout << " digite a nota 2 ";
cin >> fnota2;



fmedia= (fnota1+fnota2)/2;

if ( fmedia<3)
cout << " indivíduo reprovado " << endl;

else if ( 3<fmedia<7)
cout << " indivíduo está de exame " <<endl;

else
cout << " indivíduo aprovado " <<endl;








    return 0;
}
