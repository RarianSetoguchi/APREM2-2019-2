#include <iostream>

#include <conio.h>

#include <locale.h>

#include <cstdlib>

using namespace std;



int main()

{

    float baseM, basem, soma, altura, area;

    //Limpa a tela

    system("cls");

    // Ativa acentuação

    setlocale(LC_ALL,"");

    cout << "\nInforme o tamanho da base maior do trapézio ";  //Recebe a primeira base

    cin >> baseM; // Introdução de variavel


    cout << "\n Informe o tamanho da base menor do trapézio "; // Recebe a segunda base

    cin >> basem; // Introdução de variavel

    cout << "\n Informe a altura do trapézio "; // Recebe a altura

    cin >> altura; // Introdução de variavel

    soma = baseM + basem; //Calcula as bases



    area = soma * altura/2; // Calcula a área do trapézio


    cout << "\nA área do trapézio = " << area;

    // Para o programa a espera de um ENTER

    getch();

}
