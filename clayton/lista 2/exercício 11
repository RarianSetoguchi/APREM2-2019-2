#include <iostream>
#include <locale.h>
#include <cstdlib>

using namespace std;

int main()
{
    //Declaração de variáveis

float fvalor1 = 0;

    //Configuração da tela de saída
    setlocale(LC_ALL,"");
    system("color F1");

    //Código do programa

  cout << "Digite seu salário atual: ";
        cin >> fvalor1;

        if (fvalor1 <= 300)

          cout << fvalor1*0.15 + fvalor1 << " o seu novo salário.";

        else if (fvalor1 < 600)

          cout << fvalor1*0.10 + fvalor1 << " o seu novo salário.";

        else if (fvalor1 <= 900)

          cout << fvalor1*0.05 + fvalor1 << " o seu novo salário.";

        else

          cout << " Seu salário e o mesmo. ";

    return 0;
}
