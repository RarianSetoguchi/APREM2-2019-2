#include <iostream>
#include <locale.h>
#include <cstdlib>

using namespace std;

int main()
{
    //Declaração de variáveis
        int ipreco = 0;
        int idesconto = 0;

    //Configuração da tela de saída
    setlocale(LC_ALL,"");
    system("color F1");

    //Código do programa

    cout << " o preco do produto";
    cin >> ipreco;

     idesconto=ipreco-(ipreco*10/100);

    cout<< "o preco final do produto e: ";
    cout<< idesconto;

    return 0;

}
