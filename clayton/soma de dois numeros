#include <iostream>
#include <locale.h>
#include <cstdlib>

using namespace std;

int main()
{
    //Declaração de variáveis
int ivalor1 = 0;
int ivalor2 = 0;

    //Configuração da tela de saída
    setlocale(LC_ALL,"");
    system("color F1");

    //Código do programa

cout << "digite o numero 1: ";
cin >> ivalor1;

cout << "digite o proximo numero 2: ";
cin >> ivalor2;

cout << "o numero " << ivalor1 + ivalor2 << " valor igual.";

    return 0;
}
